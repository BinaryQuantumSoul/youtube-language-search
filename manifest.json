{
  "manifest_version": 2,
  "name": "Youtube Language Search",
  "version": "1.0",
  "description": "Allows filtering youtube searches by language, requires (free) youtube api",
  "permissions": ["storage","tabs"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["addon/main.js"],
      "css": ["addon/styles.css"]
    }
  ],
  "browser_action": {
    "default_popup": "menu/popup.html"
  }
}